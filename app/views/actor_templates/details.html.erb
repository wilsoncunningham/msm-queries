<h1>Actor #<%= @actor.id %> details</h1>

<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
    <dd><%= @actor.name %></dd>
  <dt>Dob</dt>
    <dd><%= @actor.dob %></dd>
  <dt>Bio</dt>
    <dd><%= @actor.bio %></dd>
  <dt>Image</dt>
    <dd><img src="<%= @actor.image %>" width="250"></dd>
  <dt>Created at</dt>
    <dd><%= @actor.created_at %></dd>
  <dt>Updated at</dt>
    <dd><%= @actor.updated_at %></dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>

  <% @matching_characters.each do |character| %>
    <tr>
      <% movie_id = character.movie_id %>
      <% movie = Movie.all.where({:id => movie_id})[0] %>

      <td><%= movie.title %></td>
      <td><%= movie.year %></td>

      <% director = Director.all.where({:id => movie.director_id})[0] %>

      <td><%= director.name %></td>
      <td><%= character.name %></td>
      <td><a href="/movies/<%= movie.id %>">Show details</a></td>
    </tr>
  <% end %>

</table>
